<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.knowledge.questioncard.mapper.QuestionCardMapper">

    <resultMap id="BaseResultMap" type="com.knowledge.questioncard.entity.QuestionCard">
        <id column="id" property="id" />
        <result column="question" property="question" />
        <result column="answer" property="answer" />
        <result column="question_image" property="questionImage" />
        <result column="answer_image" property="answerImage" />
        <result column="bank_id" property="bankId" />
        <result column="created_at" property="createdAt" />
    </resultMap>

    <insert id="insert" parameterType="com.knowledge.questioncard.entity.QuestionCard" 
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO question_cards (question, answer, question_image, answer_image, bank_id, created_at)
        VALUES (#{question}, #{answer}, #{questionImage}, #{answerImage}, #{bankId}, #{createdAt})
    </insert>

    <delete id="deleteById">
        DELETE FROM question_cards WHERE id = #{id}
    </delete>

    <update id="updateById" parameterType="com.knowledge.questioncard.entity.QuestionCard">
        UPDATE question_cards
        <set>
            <if test="question != null">question = #{question},</if>
            <if test="answer != null">answer = #{answer},</if>
            <if test="questionImage != null">question_image = #{questionImage},</if>
            <if test="answerImage != null">answer_image = #{answerImage},</if>
            <if test="bankId != null">bank_id = #{bankId},</if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM question_cards WHERE id = #{id}
    </select>

    <select id="selectByBankId" resultMap="BaseResultMap">
        SELECT qc.* 
        FROM question_cards qc
        INNER JOIN question_banks qb ON qc.bank_id = qb.id
        WHERE qc.bank_id = #{bankId}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM question_cards
    </select>

    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO question_cards (question, answer, question_image, answer_image, bank_id, created_at)
        VALUES
        <foreach collection="cards" item="card" separator=",">
            (#{card.question}, #{card.answer}, #{card.questionImage}, #{card.answerImage}, #{card.bankId}, #{card.createdAt})
        </foreach>
    </insert>

    <select id="countByBankId" resultType="int">
        SELECT COUNT(*) FROM question_cards WHERE bank_id = #{bankId}
    </select>

    <delete id="deleteByBankId">
        DELETE FROM question_cards WHERE bank_id = #{bankId}
    </delete>

</mapper>